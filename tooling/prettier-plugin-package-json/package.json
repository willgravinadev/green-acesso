{
  "name": "@ecomverzo/prettier-plugin-package-json",
  "version": "0.0.4",
  "description": "A prettier plugin using prettier-package-json",
  "license": "MIT",
  "author": "W I L L <will@gravina.dev> (https://github.com/willgravinadev)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo dist",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "prettier-package-json": "^2.8.0"
  },
  "peerDependencies": {
    "prettier": "3.x"
  },
  "devDependencies": {
    "@ecomverzo/eslint-config": "workspace:*",
    "@ecomverzo/tsconfig": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix"
  }
}
