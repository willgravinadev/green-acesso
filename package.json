{
  "private": true,
  "name": "ecomverzo",
  "author": "W I L L <will@gravina.dev> (https://github.com/willgravinadev/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inverzo/ecomverzo.git"
  },
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:apps": "turbo build --filter=./apps/*",
    "build:mdx": "turbo build:mdx",
    "build:packages": "turbo build --filter=./packages/*",
    "build:tooling": "turbo build --filter=./tooling/*",
    "check": "turbo lint && turbo type-check && pnpm format:check && pnpm check:spelling && pnpm check:knip",
    "check:knip": "dotenv -e .env.local -- knip",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --unique",
    "clean": "turbo clean && rm -rf .turbo coverage",
    "commit": "cz",
    "db:generate": "turbo db:generate",
    "db:migrate:dev": "turbo db:migrate:dev",
    "db:migrate:prod": "turbo db:migrate:prod",
    "db:push": "turbo db:push",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "dev": "turbo dev --concurrency 20",
    "dev:apps": "turbo dev --filter=./apps/*",
    "dev:core-api": "turbo dev --filter=@ecomverzo/core-api",
    "dev:packages": "turbo dev --filter=./packages/*",
    "dev:www": "turbo dev --filter=@ecomverzo/www",
    "format:check": "prettier --cache --check --ignore-path .gitignore --ignore-path .prettierignore .",
    "format:write": "prettier --cache --write --list-different --ignore-path .gitignore --ignore-path .prettierignore .",
    "preinstall": "npx --yes only-allow pnpm",
    "lint": "turbo lint && eslint . --max-warnings 0",
    "lint:fix": "turbo lint:fix && eslint --fix .",
    "prepare": "simple-git-hooks && pnpm build:packages && pnpm build:tooling && pnpm run db:generate",
    "release": "changeset publish",
    "test:e2e": "turbo test:e2e",
    "test:e2e:inspector": "turbo test:e2e:inspector",
    "test:e2e:install": "playwright install",
    "test:e2e:ui": "turbo test:e2e:ui",
    "test:unit": "vitest run --passWithNoTests",
    "test:unit:coverage": "vitest --coverage --ui",
    "test:unit:ui": "vitest --ui",
    "type-check": "turbo type-check",
    "version": "changeset version"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@cspell/dict-bash": "^4.2.0",
    "@cspell/dict-companies": "^3.1.14",
    "@cspell/dict-es-es": "^3.0.3",
    "@cspell/dict-filetypes": "^3.0.11",
    "@cspell/dict-html": "^4.0.11",
    "@cspell/dict-lorem-ipsum": "^4.0.4",
    "@cspell/dict-node": "^5.0.7",
    "@cspell/dict-npm": "^5.1.33",
    "@cspell/dict-software-terms": "^5.0.3",
    "@cspell/dict-typescript": "^3.2.1",
    "@ecomverzo/eslint-config": "workspace:*",
    "@ecomverzo/prettier-config": "workspace:*",
    "@ecomverzo/prettier-plugin-package-json": "workspace:*",
    "@ecomverzo/tsconfig": "workspace:*",
    "@playwright/test": "^1.51.1",
    "@turbo/gen": "^2.4.4",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "cspell": "^8.18.1",
    "cz-git": "^1.11.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "9.23.0",
    "jsdom": "^26.0.0",
    "knip": "^5.46.5",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "simple-git-hooks": "^2.12.1",
    "ts-morph": "^25.0.1",
    "tsup": "8.4.0",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "pnpm check:spelling"
    ],
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix",
    "*.{ts,tsx}": "pnpm run test:unit"
  },
  "packageManager": "pnpm@10.7.1",
  "simple-git-hooks": {
    "commit-msg": "pnpm commitlint --edit $1 && pnpm check:spelling $1",
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test:unit"
  }
}
